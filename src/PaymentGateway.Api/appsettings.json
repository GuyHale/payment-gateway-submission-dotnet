{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "BankSimulatorConfig": {
    "BaseUrl": "http://localhost:8080",
    "TimeoutSeconds": 10
  },
  "ResilienceConfig": {
    "MaxRetries": 3,
    "DelayMs": 200
  },
  "CurrencyCodesConfig": {
    "CurrencyCodes": [ "USD", "GBP", "EUR" ]
  },
  "RateLimitingConfig": {
    "PermitLimit": 5,
    "QueueLimit": 20,
    "WindowSeconds": 1
  },
  "AllowedHosts": "*"
}
